{
    "name": "codingmatters/data-persistence-layer",
    "license": "MIT",
    "type": "library",
    "authors": [
        {
            "name": "Gab Amba",
            "email": "gamba@gabbydgab.com",
            "homepage": "http://www.gabbydgab.com/"
        }
    ],
    "require": {
        "php": "^7.0",
        "roave/security-advisories": "dev-master",
        "zendframework/zend-hydrator": "^2.2"
    },
    "require-dev": {
        "zendframework/zend-test": "^3.0.1",
        "squizlabs/php_codesniffer": "^2.6.2",
        "phpbench/phpbench": "^0.11.2",
        "sebastian/phpcpd": "^2.0.4"  
    },
    "autoload": {
        "psr-4": {
            "CodingMatters\\Persistence\\": "module/Persistence/src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "CodingMatters\\PersistenceTest\\": "module/Persistence/test/"
        }
    },
    "scripts": {
        "post-install-cmd": [
            "@show-me-the-bugs"
        ],
        "post-update-cmd": [
            "@show-me-the-bugs"  
        ],
        "show-me-the-bugs": [
            "@cs",
            "@cpd",
            "@test"
        ],
        "cpd": "phpcpd --exclude=vendor --fuzzy src",
        "cs": "phpcs --ignore=/vendor,/build src",
        "cs-fix": "phpcbf --ignore=/vendor,/build src",
        "test": "phpunit --verbose"
    }
}

